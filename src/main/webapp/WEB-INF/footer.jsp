}

.bottom-links .links {
	display: flex;
	flex-direction: column;
	justify-content: center;
	align-items: center;
	padding: 0 40px;
}

.bottom-links .links span {
	font-size: 10px;
	color: #fff;
	text-transform: uppercase;
	margin: 5px 0;
}

.bottom-links .links a {
	text-decoration: none;
	color: #a1a1a1;
	padding: 5px 2px;
}
</style>
</head>
