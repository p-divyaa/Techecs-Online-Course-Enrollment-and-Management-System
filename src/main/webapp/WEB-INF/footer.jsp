@charset "ISO-8859-1";

.footer {
	display: flex;
	justify-content: space-between;
	align-items: center;
	background-color: #302f49;
	padding: 10px 20px;
}

.footer .copy {
	color: #fff;
}

.bottom-links {
	display: flex;
	justify-content: space-around;
	align-items: center;
